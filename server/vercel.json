{
    "version": 2,
    "name": "Chat App",
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/socket.io/(.*)", 
            "dest": "./index.js"
        },
        {
            "src": "/api/(.*)", 
            "dest": "./index.js"
        },
        {
            "src": "/(.*)",
            "dest": "./public/$1" 
        }
    ]
}